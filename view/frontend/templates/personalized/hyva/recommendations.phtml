<script>
    function initPersonalizedSlider() {
        return {
            atStart: true,
            atEnd: false,
            
            init() {
                this.$nextTick(() => this.updateScrollState());
            },
            
            scrollLeft() {
                const slider = this.$refs.slider;
                slider.scrollBy({ left: -280, behavior: 'smooth' });
            },
            
            scrollRight() {
                const slider = this.$refs.slider;
                slider.scrollBy({ left: 280, behavior: 'smooth' });
            },
            
            updateScrollState() {
                const slider = this.$refs.slider;
                this.atStart = slider.scrollLeft <= 0;
                this.atEnd = slider.scrollLeft + slider.clientWidth >= slider.scrollWidth - 10;
            }
        }
    }
</script>

